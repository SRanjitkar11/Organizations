@model TestOrganization.Models.DTO.OrganizationUserDTO

@{
    ViewData["Title"] = "AddToOrganization";
}

<h1>Edit</h1>

<h4>Organization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller= "Users" asp-action="AddToOrganization">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label"></label>
                <select asp-for="OrganizationId" class ="form-control" >
                    <option value = ""> -- choose -- </option>
                    @foreach (var item in ViewBag.Organizations)
                    {
                        <option value = "@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
